    <% if @student.errors.any? %>
        <div class="container">
            <div class="row sign-up-form">
                <div class="col s12">
                    <div class="card-panel red lighten-2">
                        <span class="white-text">
                            <strong><%= pluralize(@student.errors.count, "error") %></strong>
                            prohibited your profile from being updated
                            <ul>
                                <% @student.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                <% end %>
                            </ul>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    <div class="containter">
        <div class="row center sign-up-form">
            <div class="col s12">
                <div class="card-panel">
                    <h3 class="header">Edit your profile</h3>
                        <div class="row">
                            <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                                <div class="row">
                                    <div class="input-field col-12">
                                        <%= f.text_field :name, placeholder: "Edit your name here", autofocus: true %>
                                        <%= f.label :name %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col-12">
                                        <%= f.email_field :email, placeholder: "Edit your password here" %>
                                        <%= f.label :email %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col-12">
                                        <%= f.submit "Submit Changes", class: "btn orange waves-effect waves-light right" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
