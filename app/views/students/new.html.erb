<div class="containter">
    <div class="row center sign-up-form">
        <div class="col s12">
            <div class="card-panel">
                <h3 class="header">Sign up</h3>
                    <div class="row">
                        <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                            <div class="row">
                                <div class="input-field col-12">
                                    <%= f.text_field :name, placeholder: "Enter your full name, please", autofocus: true %>
                                    <%= f.label :name %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col-12">
                                    <%= f.email_field :email, placeholder: "Enter your password" %>
                                    <%= f.label :email %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col-12">
                                    <%= f.submit "Submit", class: "btn orange waves-effect waves-light right" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
